<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <% if @photo.image %>
    <%= image_tag @photo.image_url.to_s %>
  <% end %>
  <div class="field">
    <!-- <%= f.label :image %><br> -->
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <% if @photo.gallery %>
      <%= f.select(:gallery_id, @gallery_options, selected: @photo.gallery.id) %>
    <% else %>
      <%= f.select(:gallery_id, @gallery_options, selected: @gallery.id) %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
