<div class="gallery-boards">

<% if @galleries.present? %>
  <% @galleries.each do |gallery| %>
    <div class="gallery-board">

<!--         <td><%= link_to 'Show', gallery %></td>
      <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
      <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->

      <p class="gallery-title"><%= gallery.title %></p>

      <div>
        <% if gallery.photos.present? %>
          <%= link_to image_tag(gallery.photos(order: "RANDOM()").first.image_url(:thumb).to_s), gallery_path(gallery.id)  %>
        <% else %>
          <p> &lt;&lt;No photos yet&gt;&gt; </p>
        <% end %>
      </div>

    </div>
  <% end %>

<% else %>
  <center><p> &lt;&lt;No Galleries Yet&gt;&gt; </p></center>

<% end %>

</div>

<br>


